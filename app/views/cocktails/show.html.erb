<div class="container">
  <h1> <%= @cocktail.name %></h1>
  <div class="carousel">
    <%= render 'carousel', cocktail: @cocktail %>
  </div>
  <div class="content_card">
    <h3>Ingredients: </h3>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li>
        <%="Description: #{dose.description}" %>
        <%= "Ingredient: #{dose.ingredient.name}" %>
        <button id = "sweet-delete", class = "btn btn-danger">Delete</button>
        <%= link_to '' , dose_path(dose), method: :delete, class: "hidden", id: "delete" %>
      </li>
      <% end %>
    </ul>
  </div>

  <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %> |
  <%= link_to 'Back to the list', cocktails_path  %>
</div>