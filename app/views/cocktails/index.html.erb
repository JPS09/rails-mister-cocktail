<div class="container">
  <div class="header">
    <%= image_tag 'transparront.gif' %><h1>  Cocktail Parrot </h1><%= image_tag 'transparront.gif' %>
  </div>
<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card" style="width: 18rem;">
      <% if cocktail.photos.attached? %>
        <%# <%= render 'carousel', cocktail: cocktail %>
        <%= cl_image_tag cocktail.photos.first.key , height: 300, width: 400, crop: :fill %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to cocktail.name , cocktail_path(cocktail)  %></h5>
      </div>
    </div>
  <% end %>
</div>
  <%= link_to 'Create a new cocktail', new_cocktail_path  %>
</div>
